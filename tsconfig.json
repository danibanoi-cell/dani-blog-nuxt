{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "~/*": ["./*"],
      "~/server/*": ["./server/*"],
      "~/app/*": ["./app/*"],
      "~": ["."]
    }
  },
  "include": [
    ".nuxt/**/*.ts",
    "./**/*.ts",
    "./**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt"
  ]
}